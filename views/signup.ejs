    </style>
</head>

<body>

    <div id="wrapper">
        <nav class="navbar navbar-inverse navbar-static-top" role="navigation" style="margin-bottom: 0;margin-top: 0">
        	<div class="navbar-header" style="margin-bottom: 0;margin-top: 0">
        	    <h1 id="siteBrand">Harmony</h1>
        	</div>
            <ul class="nav navbar-nav navbar-right">
                <li><a href="/logout"><span class="glyphicon glyphicon-log-out"></span> Logout</a></li>
            </ul>
            <div class="navbar-default sidebar" role="navigation">
                <div class="sidebar-nav navbar-collapse">
                    <ul class="nav" id="side-menu">
                        <li style="text-align:center;">
                            <br></br>
                            <br></br>
                            <br></br>
                            <br></br>
                        </li>
                        <li>
                            <a href="/profile"  style="margin-bottom:5px;margin-top:5px;"><i class="fa fa-dashboard fa-fw"></i> Dashboard</a>
                        </li>
                        <li>
                            <a href="/addDoctor" style="margin-bottom:5px;margin-top:5px;"><span class="fa fa-user"></span> Add Doctor</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <div id="page-wrapper">
            <div class="container-fluid">
                <div class="col-sm-6 col-sm-offset-1">
                    <h1><span class="fa fa-sign-in"></span> Add Doctor</h1>
                    <% if (message.length > 0) { %>
                        <div class="alert alert-danger"><%= message %></div>
                    <% } %>
                    <form action="/signup" method="post" onsubmit="return checkPass(this)">
                        <div class="form-group">
                            <label>Name</label>
                            <input required type="text" class="form-control" name="name">
                        </div>
                        <div class="form-group">
                            <label>Department</label>
                            <input type="text" class="form-control" name="department">
                        </div>
                        <div class="form-group">
                            <label>Phone</label>
                            <input type="tel" class="form-control" name="phone">
                        </div>
                        <div class="form-group">
                            <label>User Id</label>
                            <input required type="text" class="form-control" name="email">
                        </div>
                        <div class="form-group">
                            <label>Password</label>
                            <input required type="password" class="form-control" name="password" id="pass">
                        </div>
                        <div class="form-group">
                            <label>Comfirm Password</label>
                            <input required type="password" class="form-control" name="cPassword" id="cPass">
                        </div>
                        <button type="submit" class="btn btn-warning btn-lg">Signup</button>
                    </form>
                    <hr>
                </div>
            </div>
        </div>
    </div>
    <script>
        function checkPass(form){
            if(form.password.value!=form.cPassword.value){
                alert("Passwords do not match.");
                return false;
            }
            return true;
        }
    </script>
<!-- f3/8 -->
</body>
