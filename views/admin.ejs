        <div id="page-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">Dashboard</h1>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="well col-sm-3" style="text-align: center;">
                            <h3>List of Doctors <span class="glyphicon glyphicon-arrow-down"></h3>
                        </div>
                        <!-- <button type="button" class="btn btn-primary btn-lg" onclick="addDoctor()" style="float: right;">Add Doctor</button> -->
                    </div>
                    <div class = "col-md-10" id="doctors">
                        <input class="search form-control search-bar-style" placeholder="Search" />
                        <button class="sort btn btn-info" data-sort="name">Sort by name</button>
                        <button class="sort btn btn-info" data-sort="username">Sort by login id</button>
                        <button class="sort btn btn-info" data-sort="department">Sort by department</button>
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Department</th>
                                    <th>login Id</th>
                                    <th>Phone</th>
                                </tr>
                            </thead>
                            <tbody class="list">
                                <% for(var i=0; i<doctorsList.length; i++) {%>
                                    <tr>
                                        <td class="name"><%= doctorsList[i].local.name %></td>
                                        <td class="department"><%= doctorsList[i].local.department %></td>
                                        <td class="username"><%= doctorsList[i].local.username %></td>
                                        <td class="phone"><%= doctorsList[i].local.phone %></td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        /*function addDoctor(){
