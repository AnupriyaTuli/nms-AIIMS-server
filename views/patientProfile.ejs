                <div class = "row">
                    <div class="col-lg-6">
                        <%if (patient != null) { %>
                            <ul class="list-group">
                              <li class="list-group-item"><b>Name:</b> <%= patient.patientName %></li>
                              <li class="list-group-item"><b>AIIMS-ID: </b><%= patient.aiimsId %></li>
                              <li class="list-group-item"><b>Email-Id: </b><%= patient.emailId %></li>
                              <li class="list-group-item"><b>Phone No.: </b><%= patient.selfPhn %></li>
                              <li class="list-group-item"><b>Caretaker Phone No.: </b><%= patient.caretakerPhn %></li>
                              <li class="list-group-item" id="alarmTime"><b>Current Alarm Time (24-hour):</b></li>
                              <li class="list-group-item" id="numberOfSteps"><b>Number of Steps:</b> <%= patient.numberOfSteps %></li>
                              <li class="list-group-item" id="stepsWaitingTime"><b>Steps waiting time:</b></li>
                            </ul>
                        <% } %>
                    </div>
                    <div class="col-lg-6">
                        <h3>Current Activities</h3>
                        <div class="col-lg-10">
                            <input type="text" class="form-control" id="tokenfield" />
                            <br>
                        </div>
                        <div class="col-lg-10" style="text-align: center;">
