    <script>
        function addAlarm(patId){
            location.href = "http://nms.iiitd.edu.in:9144/addAlarm/"+patId;
        }
        function patientProfile(patId){
            location.href = "http://nms.iiitd.edu.in:9144/patientProfile/"+patId;
        }
        function downloadCallLogCSV(){
            location.href = "http://nms.iiitd.edu.in:9144/patientProfile/<%= patient.id %>/downloadCallog";
        }
        function downloadAppUsageCSV(){
            location.href = "http://nms.iiitd.edu.in:9144/patientProfile/<%= patient.id %>/downloadAppUsage";
        }
        
        $(document).ready(function(){
            $("#setAlarmTime").timepicki({
                overflow_minutes:true,
                increase_direction:'up',
                start_time: ["08", "00", "AM"],
                reset: true
            });
            $("#waitingTime").timepicki({
                increase_direction:'up',
                start_time: ["00", "00"],
                show_meridian:false,
                reset: true
            });
            if(<%= patient.stepsWaitingTime %> == -1){
                $("#stepsWaitingTime").html("Steps waiting time: Not set yet.");
                $("#alarmTime").html("Current Alarm Time: Not set yet.");
                $("#numberOfSteps").html("Number of Steps: Not set yet.");
            }
            else{
                var stepsTimeHours = Math.floor("<%= patient.stepsWaitingTime %>" / 3600);
                var stepsTimeMin = ("<%= patient.stepsWaitingTime %>" - stepsTimeHours*3600)/60;
                var d = new Date(Number(<%= patient.alarmStartTime %>));
                $("#stepsWaitingTime").html("<b>Steps waiting time: </b>"+stepsTimeHours+" hours "+stepsTimeMin+" minutes");
                $("#alarmTime").html("<b>Current Alarm Time: </b>"+d.getHours()+" : "+d.getMinutes()); 
            }
            $('#tokenfield').tokenfield('setTokens', "<%= patient.activities %>")
          });
        function setActivities(){
            var patId = "<%= patient.id %>"
            console.log(patId);
            var activities = $('#tokenfield').tokenfield('getTokensList').split(', ');
            
            $.post("/setActivities",
                {
                    patId: patId,
                    activities:$('#tokenfield').tokenfield('getTokensList').split(', ')
                },
                function(data, status){
                    console.log(status);
                    if(status=="success"){
                        alert("Activities set successfully.");
                        //window.location.href="/profile";
                    }
                    else{
                        alert("Error while setting the Activities.");
                    }
                });
        }
        $('#tokenfield').tokenfield({
          autocomplete: {
            source: ['brushing','bathing','breakfast','walking','yoga'],
            delay: 50
          },
          showAutocompleteOnFocus: true
        })
        $('#tokenfield').on('tokenfield:createtoken', function (e) {
            var actArr = $('#tokenfield').tokenfield('getTokensList').split(', ');
            if(actArr.indexOf(e.attrs.value)!=-1){
                return false;
            }
        })
        function setOption(){
            if($('#setAlarmTime').val()!="" && $('#waitingTime').val()!="" && $('#steps').val()>=0){
                var d = new Date();
                var time = $('#setAlarmTime').val().split(" : ");
                console.log(time);
                if(time[2]=="PM")
                    d.setHours(Number(time[0])+12);
                else
                    d.setHours(Number(time[0]));
                d.setMinutes(time[1]);
                console.log(d);
                //var urlParams = window.location.href.split("/");
                //var patId = urlParams[urlParams.length-1];
                var patId = "<%= patient.id %>"
                //console.log(patId)
                var stepTime = $('#waitingTime').val().split(" : ")[0]*3600 + $('#waitingTime').val().split(" : ")[1]*60;
                console.log(d);
                $.post("/addAlarm",
                    {
                        patId: patId,
                        alarmTime:d,
                        numberOfSteps:$('#steps').val(),
                        stepsWaitingTime:stepTime
                    },
                    function(data, status){
                        console.log(status);
                        if(status=="success"){
                            alert("Alarm set successfully.");
                            window.location.href="/profile";
                        }
                        else{
                            alert("Error while setting the alarm.");
                        }
                    });
            }
            else{
                alert("Please fill the all the details.")
            }
        }
    </script>
